{% trans_default_domain "Modules.Salusperaquam.Admin" %}
{% form_theme generalForm 'PrestaShopBundle:Admin/TwigTemplateForm:prestashop_ui_kit.html.twig' %}


{% block salusperaquam_configuration_general %}
  <div class="row justify-content-center">
    <div class="col">
      <div class="card">
        <h3 class="card-header">
          <i class="material-icons">settings</i> {{ 'General'|trans({}, 'Admin.Global') }}
        </h3>
        <div class="card-block row">
          <div class="card-text">
            {{ form_widget(generalForm) }}
          </div>
        </div>
        <div class="card-footer">
          <div class="d-flex justify-content-end">
            <button class="btn btn-primary" id="form-general-save-button">{{ 'Save'|trans({}, 'Admin.Actions') }}</button>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
